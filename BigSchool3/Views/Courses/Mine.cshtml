@Model IEnumerable<BigShool3.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/View/Shared/_Layout.cshtml";
}
<h2>Mine</h2>
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="Day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit","courses",new {id = course.Id})">
                    Edit
                </a>
                <a href="#" class="js-cancel-course"data-course-id="@course.id">
                    Cancel
                </a>
            </div>
        </li>
    }
</ul>
